        word-break: break-all;
    }
</style>
<div class="text-left, consoleFont" style="width:98%">
    <h1 class="display-4">OAuth2 Cookie Parser</h1>

    <form class="form-horizontal" method="post">
        CookieName : <br /><input name="CookieName" value="@CookieName" /> <br />
        CookieValue: <br /><textarea name="CookieValue" style="width:850px; height:200px">@CookieValue</textarea>
        <br />
        <input value="SUBMIT" type="submit" />
        <h3>Parsed Values</h3>
        Parsed Username: <br /><label>@ParsedUsername</label>
        <br />
        <label>Status:</label> <br />
        @StatusMessage
    </form>
</div>
